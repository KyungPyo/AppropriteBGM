<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_menu">

    <LinearLayout
        android:id="@+id/close_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="5"
        android:background="#90dfdfdf"
        android:onClick="onClickMain"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_weight="5"
        android:background="@color/background_floating_material_dark">

        <Button
            android:id="@+id/btn_atv_record"
            android:onClick="onClickMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="녹음하기"/>
        <Button
            android:id="@+id/btn_atv_favorite"
            android:onClick="onClickMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="즐겨찾기 설정"/>
        <Button
            android:id="@+id/btn_atv_category"
            android:onClick="onClickMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카테고리 설정"/>
        <Button
            android:id="@+id/btn_atv_settings"
            android:onClick="onClickMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="환경설정"/>

    </LinearLayout>

</LinearLayout>